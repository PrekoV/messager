.SignIn
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    align-content: center; 
    justify-content: center; 
    overflow: auto; 
    .wrapper
        border 2px solid pink
        width: 40%
        min-width: 200px
        margin: 0 auto
        padding: 10px
        text-align: center
        .title
            font-size: 24px
            text-align: center
        .err
            color: red
            font-size: 14px
            text-align: center
        form
            display: flex
            flex-direction: column
            justify-content: space-around
            align-items: center
            .line
                height 20px
            //     div
            //         min-width 100px
            //         max-width 300px
            .forgot
                padding: 20px
                display inline
                a
                    color black
                    text-decoration: none
                    cursor pointer
                    font-size: 14px
                a:hover
                    color pink
            .inputs
                display: flex
                flex-direction: column
                justify-content: space-around
                width: 80%
